<?xml version="1.0" encoding="UTF-8" ?>
<dataConfig>
     <!--
      DataImportHandler for Mongo
      https://github.com/james75/SolrMongoImporter
      -->
     <dataSource name="Mosaic" type="MongoDataSource" database="mosaic" host="localhost" />
     <document name="People">
         <entity name="people"
                processor="MongoEntityProcessor"
                 query="{}"
                 collection="people"
                 datasource="Mosaic"
                 transformer="MongoMapperTransformer" >
         </entity>
     </document>
 </dataConfig>