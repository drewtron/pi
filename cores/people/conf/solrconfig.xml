<?xml version="1.0" encoding="UTF-8" ?>
<config>
  <abortOnConfigurationError>${solr.abortOnConfigurationError:true}</abortOnConfigurationError>
  <luceneMatchVersion>LUCENE_40</luceneMatchVersion>
  <dataDir>/Users/wballard/pi/data/people</dataDir>

  <jmx />

  <updateHandler class="solr.DirectUpdateHandler2">
    <autoSoftCommit>
       <maxTime>1000</maxTime>
   </autoSoftCommit>
  </updateHandler>

  <query>
    <maxBooleanClauses>12000</maxBooleanClauses>
    <filterCache class="solr.LFUCache"
      size="16384"
      initialSize="512"
      autowarmCount="0"/>
    <queryResultCache class="solr.LFUCache"
      size="1000000"
      initialSize="512"
      autowarmCount="0"/>
    <documentCache class="solr.LFUCache"
      size="1000000"
      initialSize="512"
      autowarmCount="0"/>
    <enableLazyFieldLoading>true</enableLazyFieldLoading>
    <useFilterForSortedQuery>true</useFilterForSortedQuery>
    <queryResultWindowSize>20</queryResultWindowSize>
    <!-- Maximum number of documents to cache for any entry in the
        queryResultCache.
     -->
   <queryResultMaxDocsCached>200</queryResultMaxDocsCached>
   <useColdSearcher>false</useColdSearcher>
   <maxWarmingSearchers>2</maxWarmingSearchers>
 </query>


 <requestDispatcher handleSelect="true" >
   <requestParsers enableRemoteStreaming="true"
     multipartUploadLimitInKB="2048000" />
   <httpCaching never304="true" />
 </requestDispatcher>

 <requestHandler name="/get" class="solr.RealTimeGetHandler">
   <lst name="defaults">
     <str name="omitHeader">true</str>
     <str name="wt">json</str>
     <str name="indent">true</str>
   </lst>
 </requestHandler>



<requestHandler name="/select"
  class="solr.SearchHandler">
  <lst name="defaults">
    <str name="wt">json</str>
    <str name="mm">100%</str>
    <str name="defType">dismax</str>
    <str name="q.op">AND</str>
    <str name="spellcheck">true</str>
    <str name="spellcheck.extendedResults">true</str>
    <str name="spellcheck.collate">true</str>
    <str name="spellcheck.collateExtendedResults">true</str>
    <int name="spellcheck.maxCollations">5</int>
    <int name="spellcheck.count">5</int>
    <int name="spellcheck.maxResultsForSuggest">10</int>
  </lst>
  <arr name="last-components">
    <str>spellcheck</str>
  </arr>
</requestHandler>

<requestHandler name="/public"
  class="solr.SearchHandler">
  <lst name="defaults">
    <str name="wt">json</str>
    <str name="mm">100%</str>
    <str name="defType">dismax</str>
    <str name="q.op">AND</str>
    <str name="spellcheck">true</str>
    <str name="spellcheck.extendedResults">true</str>
    <str name="spellcheck.collate">true</str>
    <str name="spellcheck.collateExtendedResults">true</str>
    <int name="spellcheck.maxCollations">5</int>
    <int name="spellcheck.count">5</int>
    <int name="spellcheck.maxResultsForSuggest">10</int>
  </lst>
  <lst name="appends">
    <str name="fq">isDNC:false</str>
    <str name="fq">isMemberPrograms:true</str>
    <str name="fq">isTermsConditionsCurrent:true</str>
  </lst>
  <lst name="invariants">
    <str name="fl">id,personId,sourceid,name,jobs,geo_taxonomy_Facet,industry_All_Facet,biography,jobsCompanyNames,jobsJobTitles</str>
  </lst>
  <arr name="last-components">
    <str>spellcheck</str>
  </arr>
</requestHandler>

<requestHandler name="/facets"
  class="solr.SearchHandler">
  <lst name="defaults">
    <str name="defType">edismax</str>
    <str name="echoParams">explicit</str>
    <str name="q.alt">*:*</str>
    <float name="tie">0.01</float>
    <str name="mm">0</str>
    <str name="rows">0</str>
    <str name="uf">*</str>
    <str name="ps">0</str>
    <str name="wt">json</str>
    <str name="facet">true</str>
    <str name="facet.mincount">1</str>
    <str name="facet.limit">400</str>
  </lst>

</requestHandler>

<requestHandler name="/suggest"
  class="solr.SearchHandler">
  <lst name="defaults">
    <str name="wt">json</str>
    <str name="spellcheck">true</str>
    <str name="spellcheck.dictionary">default</str>
    <int name="spellcheck.count">40</int>
    <int name="spellcheck.alternativeTermCount">40</int>
  </lst>

  <arr name="components">
    <str>spellcheck</str>
  </arr>
</requestHandler>

<searchComponent name="spellcheck" class="solr.SpellCheckComponent">
  <lst name="spellchecker">
    <str name="name">default</str>
    <str name="field">spell</str>
    <str name="classname">solr.DirectSolrSpellChecker</str>
    <int name="minQueryLength">2</int>
  </lst>
</searchComponent>

<!-- Update handlers needed to initiate manual document uploads used by the NRT index -->
  <requestHandler name="/update/json"
    class="solr.JsonUpdateRequestHandler"
    startup="lazy" />

  <requestHandler name="/update/extract"
    startup="lazy"
    class="solr.extraction.ExtractingRequestHandler" >
    <lst name="defaults">
      <str name="fmap.content">text</str>
      <str name="lowernames">true</str>
      <str name="uprefix">ignored_</str>

      <str name="captureAttr">true</str>
      <str name="fmap.a">links</str>
      <str name="fmap.div">ignored_</str>
    </lst>
  </requestHandler>

  <requestHandler name="/admin/"
    class="solr.admin.AdminHandlers" />

<!-- ping/healthcheck -->
  <requestHandler name="/admin/ping" class="solr.PingRequestHandler">
    <lst name="invariants">
      <str name="q">solrpingquery</str>
    </lst>
    <lst name="defaults">
      <str name="echoParams">all</str>
    </lst>
  </requestHandler>

  <requestHandler name="/dataimport" class="org.apache.solr.handler.dataimport.DataImportHandler">
    <lst name="defaults">
      <str name="config">data-config.xml</str>
    </lst>
  </requestHandler>

  <queryResponseWriter name="json" class="solr.JSONResponseWriter">
  </queryResponseWriter>

  <admin>
    <defaultQuery>*:*</defaultQuery>
    <pingQuery>q=alcoa&amp;rows=0&amp;wt=json</pingQuery>
  </admin>

  <requestHandler name="/replication" class="solr.ReplicationHandler" >
    
  </requestHandler>

</config>
